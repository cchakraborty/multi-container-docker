{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "chiranjit007/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "chiranjit007/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "chiranjit007/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "chiranjit007/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links":["client", "server"]
        }
    ]

}